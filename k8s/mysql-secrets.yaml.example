apiVersion: v1
kind: Secret
metadata:
  name: mysql-secrets
type: Opaque
data:
  # Use o comando: echo -n "SUA_SENHA" | base64
  MYSQL_ROOT_PASSWORD: SUBSTITUA_COM_BASE64_ROOT_PASSWORD
  MYSQL_PASSWORD: SUBSTITUA_COM_BASE64_MYSQL_PASSWORD

# Instruções de uso:
# 1. Copie este arquivo para mysql-secrets.yaml
# 2. Substitua os valores BASE64 com suas próprias senhas codificadas
# 3. NÃO faça commit do mysql-secrets.yaml
